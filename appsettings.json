{
  "ConnectionStrings": {
    "DefaultConnection": "Host=${DB_HOST};Database=${DB_NAME};Username=${DB_USER};Password=${DB_PASSWORD};SSL Mode=Require;Trust Server Certificate=true"
  },
  "Jwt": {
    "Key": "${JWT_KEY}",
    "Issuer": "distels-api",
    "Audience": "distels-app",
    "ExpireMinutes": 60
  },
  "EmailConfig": {
    "SmtpServer": "${SMTP_SERVER}",
    "SmtpPort": 587,
    "Username": "${SMTP_USER}",
    "Password": "${SMTP_PASS}",
    "FromEmail": "${FROM_EMAIL}",
    "FromName": "Sistema Distels",
    "EnableSsl": true
  },
  "Frontend": {
    "BaseUrl": "${FRONTEND_URL}"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}